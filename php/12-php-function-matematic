<?php

    echo M_PI."<br />".M_E."<br />";

    $x = -15;
    echo abs ($x)."<br />";
    $y = 49.235768;
    echo round($y , 3)."<br />";
    echo ceil($y)."<br />";      //aprofimeaza la mai mare
    echo floor($y)."<br />";         //aproximeaza la mai mic

    echo mt_rand (1 , 20)."<br />";
    echo min(12 , 13 ,0 ,-1)."<br />";
    echo max(12 , 13 ,0 ,-1)."<br />";

    $z = 1;

    echo sin($z)."<br />";
    echo tan($z)."<br />";
    echo atan($z)."<br />";


?>
